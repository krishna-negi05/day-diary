generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DiaryEntry {
  id        Int      @id @default(autoincrement())
  date      String   @unique      // e.g., "2025-11-04"
  title     String
  mood      String?
  content   String?
  files     Json?                 // store uploaded files as base64 data or URLs
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


